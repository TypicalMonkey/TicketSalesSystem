<Window x:Class="TicketSalesSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:TicketSalesSystem.Views"
        Title="Main Window" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Background="#007ACC" Grid.Row="0">
            <TextBlock Text="Ticket Sales System" Foreground="White" FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Border>

        <StackPanel Grid.Row="1" Orientation="Vertical" Background="#F0F0F0" Width="200">
            <Button Content="Login" Width="180" Margin="10" />
            <Button Content="Ticket Sale" Width="180" Margin="10"/>
            <Button Content="User Management" Width="180" Margin="10" />
        </StackPanel>

        <Frame x:Name="MainFrame" Grid.Row="1" Margin="200 0 0 0"/>
    </Grid>
</Window>
